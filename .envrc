# Snowing NixOS Configuration Development Environment
# This file sets up the development environment using direnv

# Enable Nix flakes
use flake

# Set environment variables for development
export NIX_CONFIG="experimental-features = nix-command flakes"
export FLAKE_PATH="$PWD"

# Development shell hook
echo "ðŸš€ Snowing NixOS Development Environment"
echo "Available commands:"
echo "  nh os switch    - Build and switch to new config"
echo "  nh os test      - Test configuration"
echo "  nh clean all    - Clean up old generations"
echo "  nix flake update - Update flake inputs"
echo "  nix flake check - Check flake configuration"
echo ""
echo "Flake path: $FLAKE_PATH"